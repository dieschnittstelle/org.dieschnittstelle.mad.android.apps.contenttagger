<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@drawable/inputselector">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">
            <TextView
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textColor="@color/abc_primary_text_material_dark"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textSize="@dimen/abc_text_size_small_material"
                android:textColor="@color/abc_primary_text_material_dark"
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/listitem_menu"
                android:background="@drawable/inputselector"
                android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
                android:layout_width="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />
            <Space
                android:layout_below="@id/listitem_menu"
                android:id="@+id/space"
                android:layout_width="1dp"
                android:layout_height="5dp" />
            <TextView
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:maxLength="3"
                android:textColor="@color/primary_action"
                android:id="@+id/numOfTags"
                android:layout_width="wrap_content"
                android:layout_below="@id/space"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/circle_primary_line"
                />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/button_material_dark" />
</LinearLayout>