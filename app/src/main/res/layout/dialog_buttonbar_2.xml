<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/button_material_light" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1.0">
        <Button
            android:id="@+id/button_secondary"
            android:background="@drawable/inputselector_dialog"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/primary_action"
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/blind_short_1"/>
        <Button
            android:id="@+id/button_primary"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:background="@drawable/inputselector_dialog_primary"
            android:textSize="14sp"
            android:textColor="@color/secondary_action"
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/blind_short_2"/>
    </LinearLayout>
</LinearLayout>