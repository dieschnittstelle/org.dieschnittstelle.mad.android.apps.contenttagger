<?xml version="1.0" encoding="utf-8"?>
<!-- follwing https://inducesmile.com/android/android-slideshow-using-viewpager-and-page-indicator-example/ -->
<!-- card view requires usage of a particular background color attribute!!! -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    card_view:cardBackgroundColor="@color/itemmenu_heading_background">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/mediaContentContainer">
        <ImageView
            android:id="@+id/loadPlaceholder"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/progress_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>